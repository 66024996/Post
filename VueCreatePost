<template>
  <div class="border p-4">
    <h2 class="text-lg font-semibold">{{ post.title }}</h2>
    <p class="text-gray-600">{{ post.content }}</p>
    <div class="mt-2">
      <!-- Form -->
      <form @submit.prevent="addComment">
        <textarea v-model="comment" placeholder="แสดงความคิดเห็น..." class="w-full p-2 border rounded"></textarea>
        <input type="file" @change="handleFileUpload" class="mt-2">
        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-4 rounded mt-2">
          Comment
        </button>
      </form>
    </div>
    <!-- Comment -->
    <div v-for="comment in post.comments" :key="comment.id" class="mt-2">
      <div>{{ comment.content }}</div>
      <img v-if="comment.image" :src="comment.image" alt="Comment Image" class="mt-2">
    </div>
  </div>
</template>

<script>
export default {
  props: ['post'],
  data() {
    return {
      comment: '',
      image: null
    };
  },
  methods: {
    addComment() {
      // New Comment
      const newComment = {
        content: this.comment,
        image: this.image
      };
      this.post.comments.push(newComment);
      // Push Comment
      this.comment = '';
      this.image = null;
    },
    handleFileUpload(event) {
      // Upload Image
      const file = event.target.files[0];
      const reader = new FileReader();
      reader.onload = () => {
        this.image = reader.result;
      };
      reader.readAsDataURL(file);
    }
  }
};
</script>

